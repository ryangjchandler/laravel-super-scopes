{
    "name": "ryangjchandler/laravel-super-scopes",
    "description": "A fluent API for applying scopes to Eloquent queries.",
    "keywords": [
        "ryangjchandler",
        "laravel",
        "laravel-super-scopes"
    ],
    "homepage": "https://github.com/ryangjchandler/laravel-super-scopes",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Chandler",
            "email": "support@ryangjchandler.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.9.2",
        "illuminate/contracts": "^9.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "RyanChandler\\LaravelSuperScopes\\": "src",
            "RyanChandler\\LaravelSuperScopes\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RyanChandler\\LaravelSuperScopes\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "RyanChandler\\LaravelSuperScopes\\LaravelSuperScopesServiceProvider"
            ],
            "aliases": {
                "LaravelSuperScopes": "RyanChandler\\LaravelSuperScopes\\Facades\\LaravelSuperScopes"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
